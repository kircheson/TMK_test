{% extends 'app/base.html.twig' %}

{% block body %}
    <h1>Список статей</h1>
    <ul>
        {% for article in articles %}
            <li>
                <a href="{{ path('article_show', {'slug': article.slug}) }}">{{ article.title }}</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
